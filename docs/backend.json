
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile information.",
      "properties": {
        "uid": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "plan": { "type": "string", "enum": ["free", "pro"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "alertsCount": { "type": "number" }
      },
      "required": ["uid", "email", "plan", "createdAt"]
    },
    "WhaleFeedTransaction": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WhaleFeedTransaction",
      "type": "object",
      "description": "Represents a transaction in the whale feed.",
      "properties": {
        "transactionId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["transactionId", "timestamp"]
    },
    "Alert": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Alert",
      "type": "object",
      "description": "Represents a user-defined alert.",
      "properties": {
        "type": { "type": "string", "enum": ["quick", "advanced"] },
        "alertType": { "type": "string", "enum": ["wallet", "token"] },
        "walletId": { "type": "string" },
        "token": { "type": "string" },
        "rule": {
          "type": "string",
          "enum": [
            "transactionValue",
            "balanceChange",
            "dormancy",
            "exchangeInteraction",
            "newWhaleTransaction",
            "liquidityPoolChange",
            "repeatedLargeTransfers",
            "netWorthChange",
            "firstTimeTokenInteraction",
            "bridgeActivity",
            "contractInteraction",
            "counterpartyPair",
            "priceChange",
            "multipleWhaleEntries",
            "tokenSupplyEvents",
            "exchangeFlowSurge",
            "newHolderSpike",
            "rugHoneypotDetector",
            "Advanced Rule"
          ]
        },
        "threshold": { "type": "number" },
        "enabled": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "userId": { "type": "string" },
        "direction": { "type": "string", "enum": ["in", "out", "any"] },
        "tokenFilter": { "type": "string" }
      },
      "required": ["type", "alertType", "rule", "enabled", "createdAt", "userId"]
    },
    "WatchlistItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "WatchlistItem",
      "type": "object",
      "description": "Represents an item (wallet or token) on a user's watchlist.",
      "properties": {
        "identifier": {
          "type": "string",
          "description": "The wallet address or token symbol."
        },
        "type": {
          "type": "string",
          "enum": ["wallet", "token"]
        },
        "name": {
          "type": "string",
          "description": "A user-defined alias for the item."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "userId": {
          "type": "string"
        }
      },
      "required": ["identifier", "type", "createdAt", "userId"]
    },
    "Portfolio": {
      "title": "Portfolio",
      "description": "Represents a user's entire crypto portfolio, aggregated across wallets.",
      "type": "object",
      "properties": {
        "netWorth": { "type": "number" },
        "history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" },
              "netWorth": { "type": "number" }
            }
          }
        },
        "userId": { "type": "string" }
      },
       "required": ["userId", "netWorth"]
    },
    "Wallet": {
      "title": "Wallet",
      "description": "Represents a single wallet being tracked within a portfolio.",
      "type": "object",
      "properties": {
        "address": { "type": "string" },
        "alias": { "type": "string" },
        "chain": { "type": "string" },
        "netWorth": { "type": "number" },
        "userId": { "type": "string" }
      },
      "required": ["address", "chain", "userId"]
    },
    "TokenHolding": {
      "title": "TokenHolding",
      "description": "Represents the amount and value of a specific token held in a wallet.",
      "type": "object",
      "properties": {
        "tokenSymbol": { "type": "string" },
        "amount": { "type": "number" },
        "value": { "type": "number" },
        "costBasis": { "type": "number" },
        "walletId": { "type": "string" }
      },
       "required": ["tokenSymbol", "amount", "value", "walletId"]
    }
  },
  "auth": {
    "providers": ["email", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public user profile information."
    },
    "/users/{userId}/alerts/{alertId}": {
      "schema": { "$ref": "#/entities/Alert" },
      "description": "Stores alerts created by a user."
    },
    "/users/{userId}/watchlist/{watchlistItemId}": {
      "schema": { "$ref": "#/entities/WatchlistItem" },
      "description": "Stores wallets or tokens a user is watching."
    },
    "/whaleFeed/{whaleTransactionId}": {
      "schema": { "$ref": "#/entities/WhaleFeedTransaction" },
      "description": "Stores the public whale feed data."
    },
    "/users/{userId}/portfolio/{portfolioId}": {
        "schema": { "$ref": "#/entities/Portfolio" },
        "description": "Stores a user's aggregated portfolio data."
    },
    "/users/{userId}/wallets/{walletId}": {
        "schema": { "$ref": "#/entities/Wallet" },
        "description": "Stores individual wallets linked to a user."
    },
    "/users/{userId}/wallets/{walletId}/holdings/{holdingId}": {
        "schema": { "$ref": "#/entities/TokenHolding" },
        "description": "Stores token holdings for a specific wallet."
    }
  }
}
